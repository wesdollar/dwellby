generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite" // mysql
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model TaskItem {
  id            Int      @id @default(autoincrement())
  title         String
  note          String?
  dueDate       DateTime
  estimatedCost String?
  statusId      Int
  effortId      Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  status        Status   @relation(fields: [statusId], references: [id])
  effort        Effort   @relation(fields: [effortId], references: [id])
  labels        Label[]
  userId        Int
  users         User     @relation(fields: [userId], references: [id])
}

model Label {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  taskItems TaskItem[]
}

model Status {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  taskItems TaskItem[]
}

model Effort {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  TaskItem  TaskItem[]
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  taskItems TaskItem[]
}
