generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TaskItem {
  id            Int      @id @default(autoincrement())
  title         String
  note          String?
  dueDate       DateTime
  estimatedCost String?
  statusId      Int
  effortId      Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  status        Status   @relation(fields: [statusId], references: [id])
  effort        Effort   @relation(fields: [effortId], references: [id])
  labels        Label[]  @relation("LabelToTaskItem")
}

model Label {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  taskItems TaskItem[] @relation("LabelToTaskItem")
}

model Status {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  taskItems TaskItem[]
}

model Effort {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  TaskItem  TaskItem[]
}
